page{background: #F4F6FA;}

/* --- all --- */
.padding{padding: 32rpx;}
.flex{display: flex; align-items: center; flex-wrap: wrap;}
.center{justify-content: center;}
.shadow{box-shadow: 0 1px 2px rgba(209,218,235,0.5);}
.placeholder{color: #ccc;}

/* --- nothing --- */
.page_nothing{height: calc(100vh - 88rpx); flex-flow: column; align-items: center;}
.page_nothing__icon{width: 320rpx; height: 320rpx; margin-top: 40%;}
.page_nothing__text{font-size: 28rpx; color: #999;}

/* --- list --- */
.allowance_list{padding: 32rpx;}
.allowance_item{background: #fff;  border-radius: 32rpx; padding: 32rpx; margin-bottom: 32rpx;}
.allowance_item__content{width: 70%;}
.allowance_item__title{font-size: 24rpx; margin-bottom: 8rpx;}
.allowance_item__date{font-size: 24rpx; color: #999;}
.allowance_item__money{margin-left: auto; font-family: din; width: 25%; display: flex; justify-content: flex-end;color: rgb(255, 0, 0);}
